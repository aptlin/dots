!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.antialias:  true
Xft.dpi:        227
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.autohint:   false
Xft.lcdfilter:  lcddefault
Xcursor.size:   16
Xcursor.theme:  Adwaita

!-------------------------------------------------------------------------------
!-------------------------------------------------------------------------------
! Rofi (application launcher)
!-------------------------------------------------------------------------------

! rofi.font:                  Fira Code 12 
! rofi.dpi:                   192 
! rofi.lines:                 8 
! rofi.width:                 16 
! rofi.opacity:               100 
! rofi.fake-transparency:     false
! rofi.bw:                    4
rofi.disable-history:       false
rofi.case-sensitive:        false
! Set lazy filter limit
rofi.lazy-filter-limit:     15000
! Row height (in chars)
rofi.eh:                    1
! Do a more fuzzy matching
rofi.fuzzy:                 false
! Use glob matching
rofi.glob:                  false
! Margin between rows
rofi.line-margin:           2

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
! Use extended color scheme
rofi.color-enabled:                  true
! Separator style (none, dash, solid)
rofi.separator-style:                solid

rofi.color-normal:                   #002B36,#EEE8D5,#002B36,#268BD2,#002B36
! Color scheme for urgent row
rofi.color-urgent:                   #002B36,#DC322F,#002B36,#268BD2,#DC322F
! Color scheme for active row
rofi.color-active:                   #002B36,#FDF6E3,#002B36,#268BD2,#FDF6E3
! Color scheme window
! background border color separator color/
rofi.color-window:                   #002B36,#002B36

